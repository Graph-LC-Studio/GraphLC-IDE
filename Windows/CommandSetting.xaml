<mah:MetroWindow x:Class="GraphLC_IDE.Windows.CommandSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphLC_IDE.Windows"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Closing="CommandSettingClosing"
        Title="模块参数" Height="700" Width="540" WindowStartupLocation="CenterOwner" mah:ControlsHelper.ContentCharacterCasing="Normal">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="编译器附加命令"/>
        <TextBox x:Name="AttachCommand" Grid.Row="1"/>
        <TextBlock Text="程序运行附加参数" Grid.Row="2" Margin="0, 8, 0, 0"/>
        <TextBox x:Name="StartupParameter" Grid.Row="3"/>
    </Grid>
</mah:MetroWindow>
